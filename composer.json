{
  "name": "xltxlm/scrutinizer",
  "description": "生成代码文档，用于交流，检查代码质量",
  "authors": [
    {
      "name": "xltxlm",
      "email": "xltxlm@qq.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "xltxlm/helper": "*"
  },
  "bin": [
    "src/scrutinizer",
    "src/docker-prepare.cmd"
  ],
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*",
    "friendsofphp/php-cs-fixer": "*"
  },
  "autoload": {
    "psr-4": {
      "xltxlm\\scrutinizer\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "xltxlm\\scrutinizer\\": [
        "./"
      ]
    }
  }
}
